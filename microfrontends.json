{
  "$schema": "https://openapi.vercel.sh/microfrontends.json",
  "applications": {
    "shell": {
      "packageName": "@repo/shell",
      "development": {
        "local": 3000,
        "fallback": "https://shell.vercel.app"
      }
    },
    "app": {
      "packageName": "@repo/app",
      "routing": [
        {
          "paths": ["/app/:path*"]
        }
      ],
      "development": {
        "local": 3001
      }
    }
  }
}
